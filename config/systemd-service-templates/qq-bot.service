[Unit]
Description=QQ Bot Service
After=network.target napcat.service
Wants=network-online.target
Requires=napcat.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/botbwiki/botbwiki
Environment=PATH=/home/ubuntu/botbwiki/botbwiki/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/home/ubuntu/botbwiki/botbwiki/venv/bin/python main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=qq-bot

# 安全设置
NoNewPrivileges=false
ProtectSystem=false
ProtectHome=false

# 资源限制
MemoryMax=256M
TasksMax=50

[Install]
WantedBy=multi-user.target
