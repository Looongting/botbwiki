# QQ 机器人配置
# 请复制此文件为 .env 并填入实际配置

# Onebot 连接配置 - 作为WebSocket客户端连接到Lagrange.OneBot
ONEBOT_WS_URL=ws://127.0.0.1:8080/onebot/v11/ws
ONEBOT_HTTP_URL=http://127.0.0.1:8080

# Nonebot2 配置 - 不启动HTTP服务器
HOST=127.0.0.1
PORT=8081

# 机器人配置
BOT_NAME=QQ机器人
BOT_MASTER_ID=123456789

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=bot.log

# 短链服务配置
SHORTLINK_TIMEOUT=10
SHORTLINK_RETRY=3

# 环境配置
ENVIRONMENT=production

# 火山引擎AI配置
ARK_API_KEY=your_api_key_here
VOLC_AI_REGION=cn-beijing
VOLC_AI_ENDPOINT=ep-20250811175605-fxzbh
AI_SUMMARY_MAX_TOKENS=2000
AI_SUMMARY_TIMEOUT=30

# AI总结功能配置
# 支持多种格式配置目标群：
# 方式1: JSON数组格式（推荐）
TARGET_GROUP_IDS=[717421103,1059707281,123456789]
# 方式2: 逗号分隔格式
# TARGET_GROUP_IDS=717421103,1059707281,123456789
# 方式3: 单个群ID（向后兼容）
# TARGET_GROUP_ID=717421103

AI_LOG_DIR=AI_LOG
AI_SUMMARY_ENABLED=true

# 适配器多连接（可选，当前未使用）
# ONEBOT_WS_URLS=["ws://127.0.0.1:8080/onebot/v11/ws"]
