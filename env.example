# QQ 机器人配置
# 请复制此文件为 .env 并填入实际配置

# Onebot 连接配置
ONEBOT_WS_URL=ws://127.0.0.1:8080/onebot/v11/ws
ONEBOT_HTTP_URL=http://127.0.0.1:8080

# Nonebot2 服务器配置
HOST=127.0.0.1
PORT=8080

# 机器人配置
BOT_NAME=QQ机器人
BOT_MASTER_ID=123456789

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=bot.log

# 短链服务配置（可选）
SHORTLINK_TIMEOUT=2
SHORTLINK_RETRY=1

# 环境配置
ENVIRONMENT=production

# 数据库配置（如需要）
# DATABASE_URL=sqlite:///./data/bot.db

# 缓存配置
CACHE_TTL=3600

# 安全配置
ACCESS_TOKEN=
